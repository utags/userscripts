    "http-server": "^14.1.1",
    "jsdom": "^27.4.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.49",
    "prettier": "^3.8.0",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "sass": "^1.97.2",
    "typescript": "^5.2.2",
    "vitest": "^4.0.17",
    "xo": "^1.2.3"
